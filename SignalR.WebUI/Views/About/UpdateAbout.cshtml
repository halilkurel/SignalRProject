@model AboutUpdateDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Hakkımızda Güncelleme İşlemi</div>
            </div>
            <div class="card-body">
                <input type="hidden" asp-for="AboutId" />
                <div class="form-group">
                    <label for="Title">Başlık Giriniz</label>
                    <input type="text" asp-for="Title" class="form-control" id="Title">
                </div>
                <div class="form-group">
                    <label for="ImageUrl">Resim Giriniz</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="Descripetion">Açıklama Giriniz</label>
                    <textarea rows="5" class="form-control" asp-for="Descripetion"></textarea>
                </div>
            </div>
            <div class="card-action">
                <button class="btn btn-success">Güncelle</button>
            </div>
        </div>
    </form>
</div>
