        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:44325/SignalRHub").build();
                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);

                    // Kategori sayısını güncellemek için
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                    }, 5000);


                }).catch((err) => { console.log(err) });

                connection.on("ReceiveCategoryCount", (categoryCount) => {
                    $("#categorycount").text(categoryCount);
                });

                connection.on("ReceiveProductCount", (productCount) => {
                    $("#productcount").text(productCount);
                });

                connection.on("ReceiveActiveCategoryCount", (activeCategoryCount) => {
                    $("#activeCategoryCount").text(activeCategoryCount);
                });

                connection.on("ReceivePassiveCategoryCount", (passiveCategoryCount) => {
                    $("#passiveCategoryCount").text(passiveCategoryCount);
                });

                connection.on("ReceiveProductCountbyCategoryNameHamburger", (hamburgerCount) => {
                    $("#productcountbyCategorynamehamburger").text(hamburgerCount);
                });

                connection.on("ReceiveProductCountbyCategoryNameDrink", (drinkCount) => {
                    $("#productcountbycategorynamedrink").text(drinkCount);
                });

                connection.on("ReceiveMaxPriceProduct", (maxPriceProduct) => {
                    $("#maxproductprice").text(maxPriceProduct);
                });
                connection.on("ReceiveProductAvg", (productAvg) => {
                    $("#productavg").text(productAvg);
                });
                connection.on("ReceiveMinPriceProduct", (minPriceProduct) => {
                    $("#minPriceProduct").text(minPriceProduct);
                });
                connection.on("ReceiveHamburgerPriceAvg", (hamburgerPriceAvg) => {
                    $("#hamburgerpriceavg").text(hamburgerPriceAvg);
                });

                connection.on("ReceiveTotalOrderCount", (totalOrderCount) => {
                    $("#totalordercount").text(totalOrderCount);
                });
                connection.on("ReceiveActiveOrderCount", (activeOrderCount) => {
                    $("#activeordercount").text(activeOrderCount);
                });
                connection.on("ReceiveLastOrderPrice", (lastOrderPrice) => {
                    $("#lastorderprice").text(lastOrderPrice);
                });
                connection.on("ReceiveMoneyCaseAmount", (totalmoneycaseamount) => {
                    $("#totalmoneycaseamount").text(totalmoneycaseamount);
                });
                connection.on("ReceiveTotalOrderPrice", (totaltodaymoneyamount) => {
                    $("#totaltodaymoneyamount").text(totaltodaymoneyamount);
                });
                connection.on("ReceiveTotalTable", (totalTable) => {
                    $("#totalTable").text(totalTable);
                });
            });
        </script>


