@model CreateNatificcationDto
@{
    ViewData["Title"] = "CreateNatification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
	<form method="post">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Yeni Bildirim Girişi</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Type">Bildirim Türü</label>
					<input type="text" asp-for="Type" class="form-control" id="Type">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Icon">Bildirim Icon'u'</label>
					<input type="text" asp-for="Icon" class="form-control" id="Icon">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Description">Bildirim Açıklaması</label>
					<input type="text" asp-for="Description" class="form-control" id="Description">
				</div>
			</div>
			<div class="card-action">
				<button  class="btn btn-success">Ekle</button>
			</div>
		</div>
	</form>
</div>
