@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
	<form method="post">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Mail Gönderme Paneli</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="ReceiverMail">Alıcı Mail Adresi</label>
					<input type="email" asp-for="ReceiverMail" class="form-control" id="ReceiverMail">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Subject">Konu</label>
					<input type="text" asp-for="Subject" class="form-control" id="Subject">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Body">Mesaj</label>
					<textarea rows="5" asp-for="Body" id="Body" class="form-control"></textarea>
				</div>
			</div>
			<div class="card-action">
				<button class="btn btn-primary">Gönder</button>
			</div>
		</div>
	</form>
</div>
