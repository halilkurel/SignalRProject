@model ContactUpdateDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
	<form method="post">
		<input type="hidden" asp-for="ContactId" />
		<div class="card">
			<div class="card-header">
				<div class="card-title">Ana Sayfa İletişim Güncelleme</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Location">Lokasyon Giriniz</label>
					<input type="text" asp-for="Location" class="form-control" id="Location">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Phone">Telefon Numarası Giriniz</label>
					<input type="text" asp-for="Phone" class="form-control" id="Phone">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Mail">Mail Giriniz</label>
					<input type="email" asp-for="Mail" class="form-control" id="Mail">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Phone">Alt Başlık Giriniz</label>
					<input type="text" asp-for="FooterTitle" class="form-control" id="FooterTitle">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Phone">Açık Günler</label>
					<input type="text" asp-for="OpenDays" class="form-control" id="OpenDays">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="Phone">Açık Saatler</label>
					<input type="text" asp-for="OpenDaysDescription" class="form-control" id="OpenDaysDescription">
				</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="FooterDescription">Açıklama Giriniz</label>
					<textarea rows="5" class="form-control" asp-for="FooterDescription" id="Description"></textarea> 
				</div>
			</div>
			<div class="card-action">
				<button class="btn btn-success">Güncelle</button>
			</div>
		</div>
	</form>
</div>
